{
  "name": "ideasonpurpose/THEME_NAME",
  "description": "Block-based hybrid theme for the Example Site.",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "vendor-dir": "wp-content/themes/THEME_NAME/vendor",
    "platform": {
      "php": "8.2",
      "ext-intl": "0"
    }
  },
  "authors": [
    {
      "name": "Ideas On Purpose",
      "homepage": "https://www.ideasonpurpose.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "IdeasOnPurpose\\": [
        "wp-content/themes/THEME_NAME/lib"
      ]
    }
  },
  "require": {
    "ideasonpurpose/wp-admin-separators": "1.0.8",
    "ideasonpurpose/wp-google-analytics": "^1.1.0",
    "ideasonpurpose/wp-svg-lib": "^3.1.0",
    "ideasonpurpose/wp-theme-i18n": "dev-main",
    "ideasonpurpose/wp-theme-init": "^2.16.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ideasonpurpose/wp-theme-i18n"
    }
  ]
}
